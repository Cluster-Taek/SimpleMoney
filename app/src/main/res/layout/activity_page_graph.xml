<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PageGraph">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moneyIutput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorOutput"
            android:fontFamily="@font/spoqa"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="-20000"
            android:textColor="@color/colorPure"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:fontFamily="@font/spoqa"
            android:gravity="center"
            android:text="2020년 05월 14일 금요일 오후 19:20" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPure">

            <Button
                android:id="@+id/numBtn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="1"
                android:textSize="20sp" />
            android:text="1" />

            <Button
                android:id="@+id/numBtn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="3"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPure">

            <Button
                android:id="@+id/numBtn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="6"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPure">

            <Button
                android:id="@+id/numBtn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="9"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPure">

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:textSize="20sp" />

            <Button
                android:id="@+id/numBtn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPure"
                android:fontFamily="@font/spoqa"
                android:text="back"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCtg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPure"
            android:fontFamily="@font/spoqa"
            android:gravity="center"
            android:text="카테고리"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>